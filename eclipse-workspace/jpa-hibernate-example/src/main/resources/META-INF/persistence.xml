<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

   <persistence-unit name="GLOBAL-REPO" >
     <description>GlobalRepo Persistence Unit</description>
     <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
     <class>com.jpa.entity.beans.example1.RepoDetails</class>
     <class>com.jpa.entity.beans.example.onetomany.GlobalRepo</class> 
     <properties>
		<property name="javax.persistence.jdbc.driver"
	               value="org.postgresql.Driver"/>
	     <property name="javax.persistence.jdbc.url"
	               value="jdbc:postgresql://localhost:5432/globalrepo"/>
	     <property name="javax.persistence.jdbc.user" value="postgres"/>
	     <property name="javax.persistence.jdbc.password" value="deva1972"/>
     </properties>
   </persistence-unit>

</persistence>